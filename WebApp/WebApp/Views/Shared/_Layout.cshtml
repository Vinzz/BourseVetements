<!DOCTYPE html>
@using WebApp.Properties


<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/PotatoMenu.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jquery.ui.potato.menu-min.js")" type="text/javascript"></script>
    <link rel="Shortcut Icon" type="image/x-icon" href="@Url.Content("~/Content/Pictures/favicon.ico")" />
    <script type="text/javascript">
        (function ($) {
            $(document).ready(function () {
                $('#menu').ptMenu();
            });
        })(jQuery);
    </script>
</head>
<body>
    <div class="page">
        <div class="headerzone">
            <table width="100%">
                <tr>
                    <td style="font: Verdana,Helvetica,sans-serif;">
                        <div style="font-size: xx-large; font-weight: bold;">
                            @Resources.AppName
                        </div>
                        <br />
                        <div style="font-size: smaller">
                            <u>@ViewBag.Location</u>
                        </div>
                    </td>
                    <td style="text-align: right">
                        <img src="@Url.Content("~/Content/Pictures/gingerBread.jpg")" alt="bandeau" height="150px"/>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <ul id="menu">
                            <li><a href="#">@Resources.menuListLists</a></li>
                            <li><a href="#">@Resources.menuSell</a></li>
                            <li><a href="#">@Resources.menuSearch</a></li>
                            <li><a href="#">@Resources.menuAdmin</a></li>
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
        <!-- end header -->
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
